<%# display breadcrumbs if we're in a folder %>
<% if @path  %>
    <p>
        Path:
        <% (@path.split("/").length).times do |i| %>
            <a href="<%= url @path.split("/")[0..i].join("/") %>"><%= @path.split("/")[i] %></a>
            <% if i < @path.split("/").length - 1 %>
                &lt;
            <% end %>
        <% end %>
    </p>
<% end %>

<%# display page contents if there are any %>
<% if @page %>
    <%= @page %>
<% else %>
    <h2>Not Found</h2>
    <p>No page was found with the specified name.</p>
<% end %>

