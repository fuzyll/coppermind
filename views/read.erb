<%# display breadcrumbs if we're in a folder %>
<% if @path.split("/").length > 1  %>
    <nav>
        <% (@path.split("/").length).times do |i| %>
            <a href="read/<%= @path.split("/")[0..i].join("/") %>"><%= @path.split("/")[i] %></a>
            <% if i < @path.split("/").length - 1 %>
                &gt;
            <% end %>
        <% end %>
    </nav>
<% end %>

<%# display page contents %>
<%= @page %>
